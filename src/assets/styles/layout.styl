#layout
  display flex
  flex-flow row nowrap
  min-height 100vh
  max-width 100%

  section
    padding 32px
    flex 1 1 45%

    &.ui
      background #fafafa

      ol
        display flex
        flex-flow row nowrap
        padding 0
        overflow-x auto
        max-width 100%

        li
          display flex
          flex-flow column nowrap
          align-items center
          flex 0 0 200px
          padding 20px
          background white

          &:not(:first-child)
            margin-left 4px

        img
          border-radius 50%
